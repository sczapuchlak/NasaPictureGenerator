<h1>Favorites</h1>

{{#each favorites}}
    <div class="favitem">
        <a href="{{this.nasa_url}}">
            <img class="favimage" src="{{this.url}}">
        </a>
        <p class="favtitle">{{this.title}}</p>
        <p class="favdate">{{this.date}}</p>
        <form action="favorites/delete" method="POST"><button type ="submit" id="deleteButton">Delete this Favorite?</button><input type="hidden" name="name" value="{{this.name}}"></form></p>
    </div>
{{else}}
    <p>No favorites saved yet.</p>
{{/each}}



